#include <iostream>
#include <vector>
#include <cmath>
using namespace std;
static short int d;
int main()
{	
include <iostream>
#include <algorithm>

int main()
{
	using namespace std;
	size_t n, ban(0);
	cin >> n;

	int dir = 0;
	int cur, pred;
	std::cin >> pred;

	while (--n) {
		std::cin >> cur;
		if (cur == pred) ++ban;
		else if (cur < pred) {
			if (dir == -1) ++ban;
			else dir = -1;
		}
		else {
			if (dir == 1) ++ban;
			else dir = 1;
		}
		pred = cur;
	}
	std::cout << ban;
	return 0;
}
